.col-md-8
	%h1= @user.full_name
	%p= @user.email
	%p= @user.phone
	%p= @user.address
	%p= @user.skype
	- if current_user && current_user.role == "client" && @user.id == current_user.id
		= link_to 'Edit', client_edit_path(@user.id), :method => :get
	%hr
	%h5= @user.phase
	%h5= "Questionnaire status: " + @user.status
	%p<
		%h5 Last Activity: 
		= @last_event_message